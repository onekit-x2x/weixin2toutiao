<import src="../../../common/head.ttml"></import>
<import src="../../../common/foot.ttml"></import>

<view  class="container">
  <template  is="head" data="{{title: 'text'}}"></template>

  <view  class="page-body">
    <view  class="page-section page-section-spacing">
      <view  class="text-box" scroll-y="true" scroll-top="{{scrollTop}}">
        <text >{{text}}</text>
      </view>
      <wx-button  disabled="{{!canAdd}}" bindtap="add">add line</wx-button>
      <wx-button  disabled="{{!canRemove}}" bindtap="remove">remove line</wx-button>
    </view>
  </view>

  <template  is="foot"></template>
</view>
